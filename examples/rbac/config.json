{
  "type": "static",
  "listener": {
    "sse": {
      "host": "0.0.0.0",
      "port": 3000,
      "authn": {
        "jwt": {
          "issuer": ["me"],
          "audience": ["me.com"],
          "jwks": {
            "local": {
              "file": "manifests/jwt/pub-key"
            }
          }
        }
      }
    }
  },
  "policies": [
    {
      "key": "sub",
      "value": "me",
      "resource": {
        "tool": {
          "id": "everything:echo"
        }
      },
      "matcher": {
        "equals": {}
      }
    }
  ],
  "targets": [
    {
      "name": "everything",
      "stdio": {
        "cmd": "npx",
        "args": [
          "@modelcontextprotocol/server-everything"
        ]
      }
    }
  ]
}